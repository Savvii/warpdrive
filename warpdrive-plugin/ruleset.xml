<?xml version="1.0"?>
<ruleset name="WordPress">
  <description>WordPress Coding Standards</description>

  <rule ref="WordPress-Core"/>
  <rule ref="WordPress-Extra"/>

  <!-- Do allow spaces for indenting -->
  <rule ref="WordPress-Core">
    <exclude name="Generic.WhiteSpace.DisallowSpaceIndent"/>
  </rule>
</ruleset>
